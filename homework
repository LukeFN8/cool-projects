grey = turtle.Turtle()
grey.color('gray')
grey.pu()
grey.goto(0,-250)
grey.pd()
grey.begin_fill()
grey.rt(90)
grey.fd(50)
grey.rt(90)
grey.fd(50)
grey.rt(90)
grey.fd(50)
grey.rt(90)
grey.fd(50)
grey.end_fill()
grey.goto(0, -250)




def changec(x):
    pl.color(x)

def plgoto(x,y):
    pl.goto(x,y)

sc.onclick(plgoto)
    
